  "eslintConfig": {
    "extends": [
      "bevry"
    ],
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "rules": {
      "no-undefined": 0,
      "default-case": 0,
      "react/no-string-refs": 1,
      "func-style": [
        "error",
        "declaration",
        {
          "allowArrowFunctions": true
        }
      ]
    }
